{
    "tools": [
        {
            "name": "subfinder",
            "install": "go install -v github.com/projectdiscovery/subfinder/v2/cmd/subfinder@latest",
            "commands": [
                {
                    "Moving to /usr/local/bin": "mv $(go env GOPATH)/bin/subfinder /usr/local/bin/subfinder"
                }
            ]
        },
        {
            "name": "amass",
            "install": "go install -v github.com/OWASP/Amass/v3/...@master",
            "commands": [
                {
                    "Moving to /usr/local/bin": "mv $(go env GOPATH)/bin/amass /usr/local/bin/amass"
                }
            ]
        },
        {
            "name": "assetfinder",
            "install": "go install -v github.com/tomnomnom/assetfinder@latest",
            "commands": [
                {
                    "Moving to /usr/local/bin": "sudo mv $(go env GOPATH)/bin/assetfinder /usr/local/bin/assetfinder"
                }
            ]
        },
        {
            "name": "feroxbuster",
            "install": {
                "macos": "brew install feroxbuster",
